<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    app:cardUseCompatPadding="true"
    android:clickable="true"
    android:id="@+id/item_mitra_cardView"
    android:layout_marginBottom="@dimen/margin_small">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="2">
        <com.rplsukses.ezprint.ui.custom.SquareCardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7">
            <ImageView
                android:id="@+id/item_mitra_ivIcon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin_med"
                android:src="@drawable/ic_toko"
                android:scaleType="centerCrop"/>
        </com.rplsukses.ezprint.ui.custom.SquareCardView>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.3"
            android:padding="@dimen/margin_small">
            <TextView
                android:id="@+id/item_mitra_tvNama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/vt323"
                android:textSize="@dimen/text_big"
                android:textColor="@color/primary_light"
                android:text="@string/tab_location"
                android:layout_marginBottom="@dimen/margin_small"/>
            <TextView
                android:id="@+id/item_mitra_tvAlamat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jl. Mulyosari No 19, Sukolilo, Surabaya"/>
            <TextView
                android:id="@+id/item_mitra_tvJam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="08:00 - 21:00"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>