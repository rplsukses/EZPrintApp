<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.KategoriMitraActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/activity_kategori_mitra_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/custom_toolbar"
        android:gravity="center_vertical"
        app:layout_collapseMode="pin"
        app:layout_scrollFlags="scroll|enterAlways"
        app:title="@string/app_name"
        app:theme="@style/MyToolbarTheme"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="3"
        android:orientation="vertical">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <ImageView
                    android:id="@+id/activity_kategori_mitra_ivIcon"
                    android:layout_width="@dimen/img_med"
                    android:layout_height="@dimen/img_med"
                    android:src="@drawable/ic_document"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="@dimen/activity_horizontal_margin">
                    <TextView
                        android:id="@+id/activity_kategori_mitra_tvTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/tab_category"
                        android:textColor="@color/colorPrimary"
                        android:fontFamily="@font/vt323"
                        android:textSize="@dimen/text_big"
                        android:layout_marginBottom="@dimen/margin_small"/>
                    <TextView
                        android:id="@+id/activity_kategori_mitra_tvDeskripsi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="210 mm x 297 mm, 80 gram"/>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/activity_kategori_mitra_rvContent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.2"
            android:padding="@dimen/margin_small"/>
    </LinearLayout>
</LinearLayout>